<?php
error_reporting(E_ALL);

function saisies_en_table($tab, $legend) {
  $chaine='';
  
  foreach ($tab as $key => $val) {
    $chaine.="<tr><td>$key</td><td>$value</td></tr>";
  }
  
  $table="<body><table><caption>$legend</caption>".
         "<tr><th>Index</th><th>Valeur</th></tr>".
         $chaine.
         "</table></body>";

  return $table;
?>
